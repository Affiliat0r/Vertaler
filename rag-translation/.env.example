# Document Translator Configuration
# Copy this file to .env and adjust values as needed

# Output Settings
OUTPUT_DIR=./output
OUTPUT_FILENAME=Documenten_Nederlands.docx

# Document Settings
DEFAULT_FONT=Arial
DEFAULT_FONT_SIZE=22
TITLE_FONT_SIZE=36
HEADING1_FONT_SIZE=28
HEADING2_FONT_SIZE=24

# Page Margins (in DXA - 1440 = 1 inch, 720 = 0.5 inch)
MARGIN_TOP=720
MARGIN_RIGHT=720
MARGIN_BOTTOM=720
MARGIN_LEFT=720

# Table Settings
TABLE_BORDER_COLOR=000000
TABLE_HEADER_BG_COLOR=E8E8E8
TABLE_LIGHT_BORDER_COLOR=CCCCCC

# Language Settings
SOURCE_LANGUAGE=Arabic
TARGET_LANGUAGE=Dutch
